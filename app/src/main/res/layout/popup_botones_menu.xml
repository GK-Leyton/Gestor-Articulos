<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="327dp"
    android:layout_height="70dp"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Frame 1 -->
            <FrameLayout
                android:id="@+id/frame1"
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:background="@drawable/rounded_phantom_white_5dp">

                <ImageButton
                    android:layout_marginTop="2dp"
                    android:id="@+id/btnEnDespacho"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal|top"
                    android:background="@drawable/rounded_coral_5dp"
                    app:srcCompat="@drawable/icono_mesa_de_trabajo" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:gravity="bottom|center_horizontal"
                    android:text="Despacho"
                    android:textColor="#000000"
                    android:textSize="8sp" />
            </FrameLayout>

            <!-- Frame 2 -->
            <FrameLayout
                android:id="@+id/frame2"
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/rounded_phantom_white_5dp"
                android:foregroundGravity="center">

                <ImageButton
                    android:id="@+id/btnEnEstanteria"
                    android:layout_marginTop="2dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal|top"
                    android:background="@drawable/rounded_coral_5dp"
                    app:srcCompat="@drawable/icono_estanteria" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:gravity="bottom|center_horizontal"
                    android:text="Estanteria"
                    android:textColor="#000000"
                    android:textSize="8sp" />
            </FrameLayout>

            <!-- Frame 3 -->
            <FrameLayout
                android:id="@+id/frame3"
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/rounded_phantom_white_5dp">

                <ImageButton
                    android:id="@+id/btnTodo"
                    android:layout_marginTop="2dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal|top"
                    android:background="@drawable/rounded_coral_5dp"
                    app:srcCompat="@drawable/icono_todo" />
                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:gravity="bottom|center_horizontal"
                    android:text="Todos"
                    android:textColor="#000000"
                    android:textSize="8sp" />
            </FrameLayout>

            <!-- Frame 4 (Nuevo Botón) -->
            <FrameLayout
                android:id="@+id/frame4"
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/rounded_phantom_white_5dp">

                <ImageButton
                    android:id="@+id/btnAutor"
                    android:layout_marginTop="2dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal|top"
                    android:background="@drawable/rounded_coral_5dp"
                    app:srcCompat="@drawable/icono_autor" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:gravity="bottom|center_horizontal"
                    android:text="Autores"
                    android:textColor="#000000"
                    android:textSize="8sp" />
            </FrameLayout>

            <!-- Frame 5 (Nuevo Botón) -->
            <FrameLayout
                android:id="@+id/frame5"
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/rounded_phantom_white_5dp">

                <ImageButton
                    android:id="@+id/btnCongreso"
                    android:layout_marginTop="2dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal|top"
                    android:background="@drawable/rounded_coral_5dp"
                    app:srcCompat="@drawable/icono_congreso" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:gravity="bottom|center_horizontal"
                    android:text="Congresos"
                    android:textColor="#000000"
                    android:textSize="8sp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame6"
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/rounded_phantom_white_5dp">

                <ImageButton
                    android:id="@+id/btnRevistas"
                    android:layout_marginTop="2dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal|top"
                    android:background="@drawable/rounded_coral_5dp"
                    app:srcCompat="@drawable/icono_revista" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:gravity="bottom|center_horizontal"
                    android:text="Revistas"
                    android:textColor="#000000"
                    android:textSize="8sp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame7"
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/rounded_phantom_white_5dp">

                <ImageButton
                    android:id="@+id/btnInformeTecnico"
                    android:layout_marginTop="2dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal|top"
                    android:background="@drawable/rounded_coral_5dp"
                    app:srcCompat="@drawable/icono_informe_tecnico_menu" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:gravity="bottom|center_horizontal"
                    android:text="Centros"
                    android:textColor="#000000"
                    android:textSize="8sp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame8"
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/rounded_phantom_white_5dp">

                <ImageButton
                    android:id="@+id/btnReportes"
                    android:layout_marginTop="2dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal|top"
                    android:background="@drawable/rounded_coral_5dp"
                    app:srcCompat="@drawable/icono_reportes" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:gravity="bottom|center_horizontal"
                    android:text="Reportes"
                    android:textColor="#000000"
                    android:textSize="8sp" />

            </FrameLayout>

        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
