<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="162dp"
    android:layout_height="257dp"
    android:background="@drawable/rounded_white_5dp"
    android:layout_gravity="center"
    android:layout_marginBottom="8dp"

    android:foregroundGravity="center">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemArticulo"
        android:layout_width="158dp"
        android:layout_height="253dp"
        android:background="@drawable/portada_libro1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/txtIdArticulo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_white_500dp"
            android:gravity="center"
            android:text="12"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtNombreArticulo"
            android:layout_width="110dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="40dp"
            android:background="@drawable/rounded_transparent_lighter_white_5dp"
            android:breakStrategy="high_quality"
            android:ellipsize="end"
            android:ems="10"
            android:fontFamily="@font/almendra_italic"
            android:gravity="center"
            android:hint="Nombre Artículo"
            android:inputType="textMultiLine"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:textColor="#000000"
            android:textColorHint="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtLocalizacion"
            android:layout_width="110dp"
            android:layout_height="wrap_content"

            android:background="@drawable/rounded_transparent_lighter_white_5dp"
            android:breakStrategy="high_quality"
            android:ellipsize="end"
            android:ems="10"
            android:fontFamily="@font/almendra_italic"
            android:gravity="center"
            android:hint="Localizacion"
            android:inputType="textMultiLine"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:textColor="#000000"
            android:textColorHint="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/txtTipoArticulo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtNombreArticulo" />

        <TextView
            android:id="@+id/txtTipoArticulo"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@drawable/rounded_transparent_lighter_white_5dp"
            android:ems="10"
            android:fontFamily="@font/amita"
            android:gravity="center"
            android:hint="Tipo Artículo"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/imageButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginEnd="65dp"
            android:layout_marginBottom="17dp"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/icono_flecha_abajo" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
